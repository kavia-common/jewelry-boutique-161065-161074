# Server
NODE_ENV=development
HOST=0.0.0.0
PORT=3000
CORS_ORIGIN=*

# Authentication
JWT_SECRET=replace_with_a_very_strong_secret_value
JWT_EXPIRES_IN=1h
BCRYPT_SALT_ROUNDS=10

# Database (MySQL)
# Preferred: Use a single URL
# Format: mysql://<user>:<password>@<host>:<port>/<database>
MYSQL_URL=mysql://user:password@localhost:3306/jewelry_shop

# Optional: If your environment provides individual parts, set them accordingly
# Note: These will only be used if MYSQL_URL is not set (and only if a host is also provided by your environment)
MYSQL_USER=user
MYSQL_PASSWORD=password
MYSQL_DB=jewelry_shop
MYSQL_PORT=3306
# MYSQL_HOST is optional; only needed if your environment provides it
# MYSQL_HOST=localhost
